<!DOCTYPE HTML>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <title>MyTheater</title>
</head>
<body>
    <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">MyTheater</a>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/performances">
                  Спектакли
                </a>
            </li>
            {% if model.userName == "" or model.userName == null %}
                <li class="nav-item">
                    <a class="nav-link" href="/signIn">
                      Войти
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/signUp">
                      Зарегистрироваться
                    </a>
                </li>
            {% else %}
                <li class="nav-item">
                    <p class="nav-link">
                      {{ model.userName }} - {{ model.userRole }}
                    </p>
                </li>
                {% if model.userRole == "admin"%}
                    <li class="nav-item">
                        <a class="nav-link" href="/users">
                          Пользователи
                        </a>
                    </li>
                {% endif %}
                {% if model.userRole == "viewer"%}
                    <li class="nav-item">
                        <a class="nav-link" href="/userTickets">
                          Мои билеты
                        </a>
                    </li>
                {% endif %}
                <li class="nav-item">
                    <a class="nav-link" href="/logout">
                      Выйти
                    </a>
                </li>
            {% endif %}
          </ul>
        </div>
      </div>
    </nav>
    <div class="row">
        <div class="col text-center">
            {% block content %}{% endblock %}
        </div>
    </div>

</body>
</html>